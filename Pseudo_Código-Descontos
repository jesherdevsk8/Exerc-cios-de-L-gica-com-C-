ALGORITMO DIAS DA SEMANA - DESCONTOS

VAR OU DECLARE
DIA: INTEIRO;
VALOR_COMPRA: DOUBLE;
VALOR_DESCONTO: DOUBLE;

INICIO
ESCREVA("DIGITE O VALOR DA COMPRA")
LEIA(VALOR_COMPRA)

 ESCREVA("INFORME O DIA DA SEMANA")
LEIA(DIA)

ESCOLHA(DIA)
CASO 1:
ESCREVA("DOMINGO")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 5) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)

 CASO 2:
ESCREVA("SEGUNDA")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 6) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)

 CASO 3:
ESCREVA("TERÃ‡A")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 7) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)

 CASO 4:
ESCREVA("QUARTA")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 8) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)

 CASO 5:
ESCREVA("QUINTA")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 9) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)

 CASO 6:
ESCREVA("SEXTA")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 10) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)
CASO 7:
ESCREVA("SABADO")
VALOR_DESCONTO = VALOR_COMPRA - (VALOR_COMPRA * 11) / 100
ESCREVA("VALOR A PAGAR COM DESCONTO:", VALOR_DESCONTO)

ESCREVA("ESCREVA O DIA ENTRE 1 A 7")

FIM_ALGORITMO